    field(DTYP, "stream")
    field(INP,  "@digitelQpc.proto linev($(unit=01)) $(port)")
#    field(FLNK, "$(device):OUTV")
    field(SCAN, "10 second")
    field(EGU,  "V")
    field(LOPR, "160")
    field(HOPR, "240")
    field(HIHI, "260")
    field(HIGH, "241")
    field(LOW,  "239")
    field(LOLO, "220")
    field(HHSV, "MAJOR")
    field(HSV,  "MINOR")
    field(LSV,  "MINOR")
    field(LLSV, "MAJOR")
}
